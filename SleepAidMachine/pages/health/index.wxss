/* pages/health/index.wxss */

page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
  
page > view {
  width: 100%;
  padding: 0 40rpx;
}

.top {
  flex-grow: 1;
  position: relative;
  margin-bottom: 5vh;
}

.sleep-health-box {
  background: #0D0917;
  opacity: 0.9;
  border-radius: 5vw 5vw 0 0 / 5vw 5vw;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 4vh 5vw 0;
}

.between-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.month {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  display: block;
}

.time-tatal {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  width: 100%;
  text-align: center;
  display: block;
}

.time-sub {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #ABABAB;
}

.device-title {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}

.space-health {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}

.air-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 2.3vh 0 8vh;
}

.air {
  width: 43vw;
  height: 400rpx;
  background: #24212D;
  border: 4rpx solid #44414C;
  box-shadow: 0px 4px 0px 0px rgba(0, 0, 0, 0.1);
  opacity: 0.8;
  border-radius: 5vw;
  padding: 5vw;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.air-title {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.air-status {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
}

.air-icon {
  width: 100%;
  height: 120rpx;
}

.bad {
  color: #FB5336;
}

.well {
  color: #328CFA;
}

.air-value {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.unit {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}