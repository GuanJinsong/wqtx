/* pages/alarmClock/index.wxss */
page {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 50rpx;
}

.top {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.alarm-box {
  width: 66vw;
  height: 66vw;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.alarm-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.second-around {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  transition-timing-function: linear;
  -webkit-transition-timing-function: linear;
  -moz-transition-timing-function: linear;
}

.time {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.count-down-box {
  height: 34rpx;
  display: flex;
  justify-content: center;
  margin-top: 64rpx;
}

.count-down {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}

.alarm-list {
  width: 100%;
  margin: 50rpx 0;
  display: flex;
  flex-direction: column;
}

.alarm-cell {
  margin-bottom: 20rpx;
  height: 144rpx;
  border-radius: 15rpx;
  background: rgba(255, 255, 255, 0.05);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 50rpx;
}

.delete-box {
  background-color: #ab0000;
  width: 65px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.alarm-cell-left {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.alarm-cell-left-title {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.alarm-cell-left-subtitle {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #ABABAB;
}

.circle {
  position: fixed;
  bottom: 24rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #2F69FB;
  border: 20rpx solid #1A1D3A;
  display: flex;
  justify-content: center;
  align-items: center;
}

.plus {
  border-radius: 50%;
  font-size: 52rpx;
  color: #ffffff;
}