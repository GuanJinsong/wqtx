/* pages/homepage/index.wxss */

page {
  background-image: radial-gradient(closest-corner at 50% 75%, #1D2F3F, #020405);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.top {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header {
  display: flex;
  width: 100%;
  height: 24px;
  align-items: center;
  justify-content: center;
  position: relative;
}
.title {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.setting {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 40rpx;
}
.sleep-time {
  height: 40rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #919191;
  margin-top: 40rpx;
} 
.layer1 {
  margin-top: 70rpx;
  width: 500rpx;
  height: 500rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.play {
  width: 68rpx;
  height: 74rpx;
}
.count-down {
  position: absolute;
  bottom: 160rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
}

.bottom {
  width: 100%;
  height: 200rpx;
  margin-bottom: 38rpx;
}

.scroll-view {
  width: 100%;
  white-space: nowrap;
  padding: 0 28rpx;
  box-sizing: border-box;
}

.music-item {
  margin: 0 12rpx;
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}

.item-box {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.item-play {
  width: 50rpx;
  height: 54rpx;
  margin-bottom: 6rpx;
}

.item-title {
  position: absolute;
  bottom: 22rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
}